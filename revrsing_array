

#include <iostream>

using namespace std;
//reversing an array
int main()
{
    cout<<"Hello World";
    int arr[] = {10,15,12,2,16,3,17};
    int length = sizeof(arr)/sizeof(int);
    cout<<length;
    int j = 1;
    int k = 0 ;
    int size = length - 1;
    while(j<4){
        
        swap(arr[k], arr[size]);
        k++;
        size--;
        j++;
    }
    for(int i = 0; i<length; i++){
        cout<<arr[i]<<endl;
    }
    return 0;
}
